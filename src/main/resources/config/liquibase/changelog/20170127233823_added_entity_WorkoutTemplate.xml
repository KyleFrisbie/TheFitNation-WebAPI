<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity WorkoutTemplate.
    -->
    <changeSet id="20170127233823-1" author="jhipster">
        <createTable tableName="workout_template">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="created_on" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <column name="last_updated" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <column name="is_private" type="boolean">
                <constraints nullable="false" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="workout_template" columnName="created_on" columnDataType="datetime"/>
        <dropDefaultValue tableName="workout_template" columnName="last_updated" columnDataType="datetime"/>
        
        <createTable tableName="workout_template_workout_instance">
            <column name="workout_instances_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="workout_templates_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="workout_templates_id, workout_instances_id" tableName="workout_template_workout_instance"/>
        
    </changeSet>
</databaseChangeLog>
